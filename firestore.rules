rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Is User Authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: Is User Owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Default: Deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow create: if isAuthenticated();
    }

    // Organizations
    match /organizations/{orgId} {
      allow read: if isAuthenticated(); // 暫時允許所有登入用戶讀取，以便搜尋
      allow create: if isAuthenticated();
      allow update: if isAuthenticated(); // 實際應檢查權限
      allow delete: if isAuthenticated(); // 實際應檢查權限

      // Roles Subcollection
      match /roles/{roleId} {
        allow read, write: if isAuthenticated();
      }
    }

    // Memberships
    match /memberships/{membershipId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Membership Requests
    match /membershipRequests/{requestId} {
      allow read, write: if isAuthenticated();
    }

    // Invitations
    match /invitations/{invitationId} {
      allow read: if isAuthenticated(); // 需要讀取來驗證代碼
      allow create, update, delete: if isAuthenticated();
    }

    // Org App Instances
    match /orgAppInstances/{instanceId} {
      allow read, write: if isAuthenticated();
    }

    // Posts
    match /posts/{postId} {
      allow read, write: if isAuthenticated();
    }

    // Chats
    match /chatRooms/{roomId} {
      allow read, write: if isAuthenticated();
    }
    
    match /chatMessages/{messageId} {
      allow read, write: if isAuthenticated();
    }

    // Tasks, Events, etc.
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }
    
    match /events/{eventId} {
      allow read, write: if isAuthenticated();
    }
    
    match /recurringTasks/{taskId} {
      allow read, write: if isAuthenticated();
    }
    
    match /taskTemplates/{templateId} {
      allow read, write: if isAuthenticated();
    }
    
    match /tags/{tagId} {
      allow read, write: if isAuthenticated();
    }
  }
}
